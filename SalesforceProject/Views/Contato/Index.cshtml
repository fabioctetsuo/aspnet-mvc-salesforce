@model SalesforceProject.ViewModels.ContatoViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="lojas-container">
    <!-- Heading Row -->
    <div class="row">

        <div class="col-md-12">
            <h1>Contatos</h1>
            <header class="jumbotron jumbotron-search my-4">
                @using (Html.BeginForm("BuscaContato", "Contato", FormMethod.Post, new { @class = "form-inline col-md-12" }))
                {
                    @Html.LabelFor(model => model.Newsletter.Nome, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.Newsletter.Nome, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    </div>
                    @Html.LabelFor(model => model.Newsletter.Email, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.Newsletter.Email, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    </div>
                    <div class="col-md-1">
                        <button type="submit" class="form-control btn btn-primary">Buscar</button>
                    </div>
                    <div class="col-md-1">
                        <button type="reset" class="form-control btn btn-default">Limpar</button>
                    </div>
                }
            </header>
            @if (TempData["mensagem"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["mensagem"]
                </div>
            }
            <!-- Jumbotron Header -->
            <div class="table-responsive">
                <table class="table table-striped table-hover table-sm" cellspacing="0" cellpadding="0">
                    <thead>
                        <tr>
                            <th data-field="name">@Html.DisplayNameFor(model => Model.Newsletter.Nome)</th>
                            <th data-field="forks_count">@Html.DisplayNameFor(model => Model.Newsletter.Email)</th>
                            <th class="actions" width="220">Ações</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Newsletters)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td class="actions">
                                    @Html.ActionLink("Excluir", "Excluir", new { id = item.idNewsletter }, new { @class = "btn btn-danger btn-sm" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>



        </div>
        <!-- /.col-md-4 -->
    </div>
</div>
