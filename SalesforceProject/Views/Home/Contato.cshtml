@model SalesforceProject.Models.Newsletter

@{
    ViewBag.Title = "Contact";
}
<div class="contact-form-container">
    <div class="col-lg-12">
        <div class="well">
            <h5>Entre em contato conosco</h5>
            (11) 0000-0000<br>
            (11) 0000-0002
        </div>
    </div>
    <div class="col-lg-12">
        <div class="well">
            <hr>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="well">
            <h5>Siga nossas  redes sociais</h5>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="well">
            <hr>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="well">
            <h5>Cadastre-se para receber nossas novidades!</h5>

            @using (Html.BeginForm("CadastrarNewsletter", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    <label class="control-label" for="nome">Nome: *</label>
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control col-md-12" })
                </div>

                <div class="form-group">
                    <label class="control-label" for="email">Email: *</label>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control col-md-12" })
                </div>

                <div class="form-group">
                    <h6 class="control-label" for="email">* Campos obrigatórios</h6>
                </div>
                <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
            }
            @if (TempData["mensagem"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["mensagem"]
                </div>
            }



        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>