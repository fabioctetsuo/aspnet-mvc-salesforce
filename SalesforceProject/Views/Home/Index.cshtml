@{
    ViewBag.Title = "Pontos de Venda";
}

<!-- Page Title -->
<div class="text-center my-4">
    <h2>Pontos de Venda</h2>
</div>

<!-- Page Features -->
<div class="row text-center">
    @foreach (var item in ViewBag.ListaLojas)
    {
        <!-- Card Row -->
        <div class="col-lg-4 col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Nome</h5>
                    <p class="card-text card-address">
                        @item.Endereco, @item.Numero  @item.Cidade @item.Estado
                    </p>
                    <p class="card-text card-address">
                        Complemento: @item.Complemento
                    </p>
                    <p class="card-text card-address">
                        Cep: @item.Cep
                    </p>
                </div>
                <div class="card-footer">
                    <p class="card-text card-note">
                        Os pontos de vendas autorizados não oferecem o serviço de retirada de ingressos das compras pelo site ou aplicativo.
                    </p>
                </div>
            </div>
        </div>
    }
</div>
<!-- /.row -->