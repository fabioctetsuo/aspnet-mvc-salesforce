@model SalesforceProject.ViewModels.LojaViewModel
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Page Content -->
<div class="lojas-container">
    <!-- Call to Action Well -->
    <div class="row">
        <div class="col-md-12">

            <h2>Produto</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @using (Html.BeginForm("Editar", "Loja", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.Loja.IdLoja)

                <div class="form-group">
                    @Html.LabelFor(model => model.Loja.Nome, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Loja.Nome, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Loja.Nome, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Loja.Cep, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Loja.Cep, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Loja.Cep, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Loja.Endereco, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Loja.Endereco, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Loja.Endereco, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Loja.Numero, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Loja.Numero, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Loja.Numero, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Loja.Complemento, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Loja.Complemento, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Loja.Complemento, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Loja.Cidade, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Loja.Cidade, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Loja.Cidade, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Loja.Estado, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.Loja.Estado, Model.ListaEstados, "Selecione o Estado", new { @class = "form-control col-md-12" })
                    @Html.ValidationMessageFor(model => model.Loja.Estado, "", new { @class = "text-danger" })
                </div>

                <hr>

                @Html.ActionLink("Cancelar", "Index", new object { }, new { @class = "btn btn-default btn-lg" })
                <input type="submit" value="Editar" class="btn btn-primary btn-lg" />

            }
            @if (TempData["mensagem"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["mensagem"]
                </div>
            }
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

